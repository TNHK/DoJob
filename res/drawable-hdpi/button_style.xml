<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
    <shape android:shape="rectangle"  >
         <corners android:radius="15dip" />
       
           <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>
         <stroke android:width="1dip" android:color="#215e21" />
         <gradient android:angle="-90" android:startColor="#215e21" android:endColor="#215e21" />            
     </shape>
 </item>
 <item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="10dip" />
         <stroke android:width="1dip" android:color="#215e21" />
         <solid android:color="#215e21"/>       
           <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>
     </shape>
 </item>  
    
 <item  >
     <shape android:shape="rectangle"  >
         <corners android:radius="10dip" />
         <stroke android:width="1dip" android:color="#215e21" />
           <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>
         <gradient android:angle="-90" android:startColor="#215e21" android:endColor="#215e21"  />            
     </shape>
 </item>


</selector>